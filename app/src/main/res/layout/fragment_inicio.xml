<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicio"
    android:orientation="vertical"
    >


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        >
    <androidx.cardview.widget.CardView
        android:id="@+id/informatica"
        android:layout_height="100dp"
        android:layout_width="150dp"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        app:cardElevation="15dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/computadoras"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingenieria en informatica"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="@color/black"
            />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/sistemas"
            android:layout_height="100dp"
            android:layout_width="150dp"
            android:layout_column="1"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            app:cardElevation="10dp"
            android:clickable="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/database"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingenieria en sistemas computacionales"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/mecatronica"
            android:layout_height="100dp"
            android:layout_width="150dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/white"
            app:cardElevation="10dp"
            android:clickable="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/robot"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingenieria en mecatronica"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/gestion"
            android:layout_height="100dp"
            android:layout_width="150dp"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="60dp"
            android:backgroundTint="@color/white"
            app:cardElevation="10dp"
            android:clickable="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/tienda"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingenieria en gestion empresarial"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/industrial"
            android:layout_height="100dp"
            android:layout_width="150dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/white"
            app:cardElevation="10dp"
            android:clickable="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|top"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ingenieria"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingenieria industrial"
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/alimentarias"
            android:layout_height="100dp"
            android:layout_width="150dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="60dp"
            android:backgroundTint="@color/white"
            app:cardElevation="10dp"
            android:clickable="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|top"
                android:padding="4dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/restaurante"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingenieria alimentarias"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/diseno"
            android:layout_height="100dp"
            android:layout_width="150dp"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/white"
            app:cardElevation="10dp"
            android:clickable="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/disenografico"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingenieria en diseÃ±o grafico"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/turismo"
            android:layout_height="100dp"
            android:layout_width="150dp"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="60dp"
            android:backgroundTint="@color/white"
            app:cardElevation="10dp"
            android:clickable="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avionvolando"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Licenciatura en turismo"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>


</androidx.appcompat.widget.LinearLayoutCompat>